{
  "manifest_version": 2,

  "name": "BetterIPTV",
  "version": "0.0.1",
  "description": "BetterIPTV boosts Ice Poseidon's YouTube Live Stream with more emotes, going live notifications and more.",
  "icons": {
    "64": "assets/icon_64.png",
    "128": "assets/icon_128.png"
  },

  "permissions": [],

  "options_page": "options/options.html",
  "browser_actions": {
    "default_icon": "assets/icon_128.png",
    "default_title": "BetterIPTV",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.gaming.youtube.com/*",
        "*://*.youtube.com/*"
      ],
      "run_at": "document_end",
      "js": [],
      "css": []
    }
  ]
}
